<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_circles"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/iv_measure_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/insert" />

        <LinearLayout
            android:id="@+id/LL_measure_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="111"
                android:textAlignment="center"
                android:textColor="@color/color_dark_gray"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="mg/dL"
                android:textColor="@color/color_dark_gray"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_measure_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal|bottom"
            android:text="검사지를 삽입해주세요."
            android:textColor="@color/color_dark_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_measure_error"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_dark_gray"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <LinearLayout
            android:id="@+id/LL_measure_mealoption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="식전"
                android:id="@+id/meas_premeal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="식후"
                android:id="@+id/meas_postmeal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="공복"
                android:id="@+id/meas_nomeal_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/FL_measuring"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_dark_gray"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/circle_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateTint="#372FDA"
                android:indeterminateTintMode="src_atop"
                android:visibility="invisible" />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_navi_restart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/state_btn_navi_restart" />

        <Button
            android:id="@+id/btn_navi_home"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/state_btn_navi_home" />

        <Button
            android:id="@+id/btn_navi_save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/state_btn_navi_save" />

    </LinearLayout>

</LinearLayout>